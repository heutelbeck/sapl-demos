<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Minimal console appender for test output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <!-- Suppress all logging during context load test -->
    <root level="OFF">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>